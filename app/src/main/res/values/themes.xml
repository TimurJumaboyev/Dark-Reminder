<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reminder2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F88102</item>
        <item name="colorPrimaryVariant">#F88102</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ProgressBar">
        <item name="colorSecondary">#F88102</item>
    </style>

    <style name="BottomSheetStyle"> parent="Theme.Design.Light.BottomSheetDialog"
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal"> parent="Theme.Design.BottomSheet.Modal"
        <item name="bottomSheetStyle">@drawable/delete_sheet</item>
    </style>

</resources>